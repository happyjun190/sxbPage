<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<!-- Log4j 2.x 配置文件。每30秒自动检查和应用配置文件的更新； -->
<Configuration status="warn" monitorInterval="30" strict="true"	schema="Log4J-V2.2.xsd">
	<Appenders>
		<!-- 输出到控制台 -->
		<Console name="Console" target="SYSTEM_OUT">
			<!-- 需要记录的级别 -->
			<ThresholdFilter level="${log.console.level}" onMatch="ACCEPT" onMismatch="DENY" />
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS}:%4p %t (%F:%L) - %m%n" />
		</Console>
		
		<!-- 输出到文件，按天或者超过128MB分割 -->
		<RollingFile name="RollingFile" ignoreExceptions="false" fileName="${log.file.dir}/ysb.log"	filePattern="${log.file.dir}/$${date:yyyy-MM}/ysb-%d{yyyy-MM-dd}-%i.log.gz">
			<!-- 需要记录的级别 -->
			<!-- <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY" /> -->
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS}:%4p %t (%F:%L) - %m%n" />
			<Policies>
				<OnStartupTriggeringPolicy />
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="128 MB" />
			</Policies>
			<DefaultRolloverStrategy max="1000"/>
		</RollingFile>
		
	<!-- 	<Socket name="Logstash" host="${logstash.ip}" port="7000" 
			connectTimeoutMillis="1000" reconnectionDelayMillis="1000"
			immediateFlush="false" >
            <SerializedLayout />
        </Socket> -->
		
	</Appenders>

	<Loggers>
		<Root level="${log.root.level}"> <!-- 全局配置 -->
			<AppenderRef ref="Console" />
			<AppenderRef ref="RollingFile"/>
<!-- 			<AppenderRef ref="Logstash"/> -->
		</Root>

		<!-- 为sql语句配置特殊的Log级别，方便调试 -->
		<!-- <Logger name="com.ysb.dao" level="${log.sql.level}" additivity="false">
			<AppenderRef ref="Console" />
		</Logger> -->
		
		<!-- 为com.ysb包配置特殊的Log级别，方便调试 -->
		<Logger name="com.ysb" level="${log.ysb.level}" additivity="false">
			<AppenderRef ref="Console" />
			<AppenderRef ref="RollingFile"/>
		<!-- 	<AppenderRef ref="Logstash"/> -->
		</Logger>
	</Loggers>
</Configuration>